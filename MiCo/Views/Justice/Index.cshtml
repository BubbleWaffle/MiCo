@{
    ViewData["Title"] = "Punish them all!";
}
<div class="container">

    <!-- Save -->
    <div class="modal fade" id="exampleModalSave" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Save user</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h5 class="text-success text-center mb-3">Are you sure you want to save this user?</h5>
                    <form class="colmx-auto" asp-controller="Justice" asp-action="Save" method="post">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-success btn-sm">Save him!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Ban -->
    <div class="modal fade" id="exampleModalBan" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Ban user</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h5 class="text-success text-danger mb-3">Are you sure you want to ban this user?</h5>
                    <form class="colmx-auto" asp-controller="Justice" asp-action="Ban" method="post">
                        <div class="form-group mb-2">
                            <label for="exampleInputDate1"><i class="bi bi-calendar-event"></i> Date:</label>
                            <input type="text" class="form-control mt-1" placeholder="Enter date" required>
                            <small id="loginHelp" class="form-text text-danger">Date entry: dd/mm/yyyy</small>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-danger btn-sm">Ban him!</button>
                        </div>
                        <p class="d-flex justify-content-center mt-2">- or- </p>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-danger btn-sm">Perma ban him!</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Unban -->
