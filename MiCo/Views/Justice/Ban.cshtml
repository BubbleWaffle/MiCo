@model MiCo.Models.ViewModels.BanViewModel
@{
    ViewData["Title"] = "Ban " + @ViewBag.nickname + " - ";
}
<div class="container">
    <div class="row">
        <!-- Ban -->
        <form class="col-sm-5 mx-auto" asp-controller="Justice" asp-action="Ban" method="post">
            <h3>Ban @ViewBag.name</h3>
            <div class="form-group mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Bun until: </label>
                <input type="datetime-local" id="banUntil" asp-for="ban_until"><br>
                <small class="text-danger">Leave date-picker empty if you want to ban this user permanently!</small>
            </div>
            <div class="form-group mb-2">
                <label for="exampleFormControlTextarea1" class="form-label">Reason:</label>
                <textarea class="form-control" id="reason" rows="3" maxlength="300" placeholder="Enter reason..." asp-for="reason"></textarea>
                <small id="loginHelp" class="form-text text-danger">Max 300 characters!</small>
            </div>
            <div class="d-flex justify-content-center">
                <a type="submit" class="btn btn-mico btn-sm mt-2 me-1" asp-controller="Home" asp-action="Index">Back to home</a>
                <button type="submit" class="btn btn-danger btn-sm mt-2 ms-1">Ban user</button>
            </div>
        </form>
        @if (ViewBag.SuccessMessage != null && ViewBag.Success)
        {
            <div class="d-flex justify-content-center mt-3 text-success">
                <i class="bi bi-check2-circle"></i> @ViewBag.SuccessMessage
            </div>
        }

        @if (ViewBag.SuccessMessage != null && !ViewBag.Success)
        {
            <div class="d-flex justify-content-center mt-3 text-danger">
                <i class="bi bi-check2-circle"></i> @ViewBag.SuccessMessage
            </div>
        }
    </div>
</div>