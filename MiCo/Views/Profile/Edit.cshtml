@model MiCo.Models.ViewModels.ProfileEditViewModel
@{
    ViewData["Title"] = "Registration Page";
}
<div class="container">
    <form class="col-sm-4 mx-auto" asp-controller="Profile" asp-action="Edit" method="post">
        <div class="form-group mb-2">
            <label for="exampleInputNickname1"><i class="bi bi-pen-fill"></i> Nickname:</label>
            <input type="text" class="form-control mt-1" placeholder="Enter nickname" value="Nickname" required asp-for="nickname">
        </div>
        <div class="form-group mb-2">
            <label for="exampleInputLogin1"><i class="bi bi-marker-tip"></i> Login:</label>
            <input type="text" class="form-control  mt-1" placeholder="Enter login" value="Login" required asp-for="login">
        </div>
        <div class="form-group mb-2">
            <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i>Old password:</label>
            <input type="password" class="form-control  mt-1" placeholder="Enter old password" required asp-for="old_password">
            <small id="loginHelp" class="form-text text-muted">If you want to make changes you have to enter password!</small>
        </div>
        <div class="form-group mb-2">
            <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i> New password:</label>
            <input type="password" class="form-control  mt-1" placeholder="Repeat password" required asp-for="new_password">
        </div>
        <div class="form-group mb-2">
            <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i> Repeat new password:</label>
            <input type="password" class="form-control  mt-1" placeholder="Repeat password" required asp-for="confirm_password">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-mico btn-sm">Save changes</button>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>