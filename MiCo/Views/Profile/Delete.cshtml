@model MiCo.Models.ViewModels.ProfileDeleteViewModel
@{
    ViewData["Title"] = "Delete your profile - ";
}
<div class="container">
    <div class="row">
        <!-- Delete -->
        <form class="col-sm-4 mx-auto" asp-controller="Profile" asp-action="Delete" method="post">
            <h5 class="text-danger text-center mb-3">Are you sure you want to delete account?</h5>
            <div class="form-group mb-2">
                <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i> Password:</label>
                <input type="password" class="form-control mt-1" placeholder="Enter password" required asp-for="password">
                <small id="loginHelp" class="form-text text-danger">If you want to delete account you have to enter password!</small>
            </div>
            <div class="d-flex justify-content-center">
                <a type="submit" class="btn btn-mico btn-sm mt-2 me-1" asp-controller="Home" asp-action="Index">Back to home</a>
                <button type="submit" class="btn btn-danger btn-sm mt-2 ms-1">Delete</button>
            </div>
        </form>
        @if (ViewBag.SuccessMessage != null && ViewBag.Success)
        {
            <div class="d-flex justify-content-center mt-3 text-success">
                <i class="bi bi-check2-circle"></i> @ViewBag.SuccessMessage <i class="bi bi-emoji-frown"></i>
            </div>
        }

        @if (ViewBag.SuccessMessage != null && !ViewBag.Success)
        {
            <div class="d-flex justify-content-center mt-3 text-danger">
                <i class="bi bi-check2-circle"></i> @ViewBag.SuccessMessage
            </div>
        }
    </div>
</div>