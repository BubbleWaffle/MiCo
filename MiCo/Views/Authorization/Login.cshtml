@model MiCo.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    var successMessage = ViewBag.SuccessMessage as string;
}
<div class="container">
    <form class="col-sm-4 mx-auto" asp-controller="Authorization" asp-action="Login" method="post">
        <div class="form-group mb-2">
            <label for="exampleInput"><i class="bi bi-envelope-at-fill"></i> Email or Login:</label>
            <input type="text" class="form-control mt-1" placeholder="Enter email or login" required asp-for="email_or_login">
        </div>
        <div class="form-group mb-2">
            <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i> Password:</label>
            <input type="password" class="form-control  mt-1" placeholder="Enter password" required asp-for="password">
            <small id="loginHelp" class="form-text text-muted">Don't have an account yet? <a asp-area="" asp-controller="Authorization" asp-action="Registration">Sign Up!</a></small><br>
            <small id="loginHelp" class="form-text text-muted">Forgot password? We can help you <a asp-area="" asp-controller="" asp-action="">remind it!</a></small>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-mico btn-sm">Login</button>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3 mb-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="d-flex justify-content-center mt-3 text-success">
            <i class="bi bi-check2-circle"></i> @successMessage
        </div>
    }
</div>