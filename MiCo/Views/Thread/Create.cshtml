@{
    ViewData["Title"] = "Create your thread - ";
}
<div class="container">
    <form class="col-sm-4 mx-auto" asp-controller="Thread" asp-action="Create" method="post">
        <div class="form-group mb-2">
            <label for="exampleInput"><i class="bi bi-code-slash"></i> Thread title:</label>
            <input type="text" class="form-control mt-1" placeholder="Enter title" required>
        </div>
        <div class="form-group mb-2">
            <label for="exampleFormControlTextarea1" class="form-label"><i class="bi bi-card-text"></i> Content:</label>
            <textarea class="form-control" id="reason" rows="3" maxlength="800" placeholder="Enter text..."></textarea>
            <small id="loginHelp" class="form-text text-danger">Max 800 characters!</small>
        </div>
        <div class="mt-3">
            <input class="form-control" type="file" id="formFileMultiple" multiple>
            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
        </div>
        <div class="d-flex justify-content-center mt-1">
            <button type="submit" class="btn btn-mico btn-sm">Create</button>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3 mb-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>