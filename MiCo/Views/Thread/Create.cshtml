@model MiCo.Models.ViewModels.ThreadCreateViewModel
@{
    ViewData["Title"] = "Create your thread - ";
}
<div class="container">
    <form class="col-sm-4 mx-auto" asp-controller="Thread" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label for="exampleInput"><i class="bi bi-code-slash"></i> Thread title:</label>
            <input type="text" class="form-control mt-1" placeholder="Enter title" asp-for="title" required>
        </div>
        <div class="form-group mb-2">
            <label for="exampleInput"><i class="bi bi-tags-fill"></i> Tags:</label>
            <input type="text" class="form-control mt-1" placeholder="Enter tags" asp-for="tags">
            <small id="tagsHelp" class="form-text text-danger">You can enter max 9 tags (example: tag_no1 tag_no2 etc)!</small>
        </div>
        <div class="form-group mb-2">
            <label for="exampleFormControlTextarea1" class="form-label"><i class="bi bi-card-text"></i> Content:</label>
            <textarea class="form-control" id="reason" rows="3" placeholder="Enter text..." asp-for="description" required></textarea>
            <small id="descriptionHelp" class="form-text text-danger">Max 500 characters!</small>
        </div>
        <div class="mt-3">
            <input class="form-control" type="file" id="formFileMultiple" name="files" accept=".png, .jpg, .jpeg, .gif" multiple>
            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
        </div>
        <div class="d-flex justify-content-center mt-1">
            <a class="btn btn-mico btn-sm mt-2 me-1" asp-controller="Home" asp-action="Index">Back to Home page</a>
            <button type="submit" class="btn btn-success btn-sm mt-2 me-1">Create</button>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3 mb-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>