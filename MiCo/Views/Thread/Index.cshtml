@model MiCo.Models.ViewModels.ThreadViewModel
@{
    ViewData["Title"] = Model._OGThread.title + " - ";
}
<div class="container">

    <!-- Edit -->
    <div class="modal fade" id="exampleModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit thread/reply</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="colmx-auto" asp-controller="Thread" asp-action="Edit" method="post">
                        <label for="exampleFormControlTextarea1" class="form-label">Text:</label>
                        <textarea class="form-control" id="reason" rows="3" maxlength="800" placeholder="Enter reason..."></textarea>
                        <small id="loginHelp" class="form-text text-danger">Max 800 characters!</small>
                        <div class="mt-3">
                            <input class="form-control" type="file" id="formFileMultiple" multiple>
                            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-mico btn-sm mt-2">Edit</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reply -->
    <div class="modal fade" id="exampleModalReply" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Reply</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="colmx-auto" asp-controller="Thread" asp-action="Reply" method="post">
                        <label for="exampleFormControlTextarea1" class="form-label">Text:</label>
                        <textarea class="form-control" id="reason" rows="3" maxlength="800" placeholder="Enter reason..."></textarea>
                        <small id="loginHelp" class="form-text text-danger">Max 800 characters!</small>
                        <div class="mt-3">
                            <input class="form-control" type="file" id="formFileMultiple" multiple>
                            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-mico btn-sm mt-2">Reply</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete -->
    <div class="modal fade" id="exampleModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete thread</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h5 class="text-danger text-center mb-3">Are you sure you want to delete this thread/reply?</h5>
                    <form class="colmx-auto" asp-controller="Thread" asp-action="Delete" method="post">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Main thread -->
    <div class="row">
        <h3>@Model._OGThread.title</h3>
    </div>
    <div class="row align-item-center justify-content-start mt-2">
        <div class="col-auto p-0">
            @if (Model._OGThread.author.pfp != null)
            {
                <a class="text-decoration-none text-reset" asp-controller="Profile" asp-action="Index" asp-route-login="@Model._OGThread.author.login"><img class="mr-3 flex-shrink-0 rounded-circle wall-of-fame-img border" src="@Model._OGThread.author.pfp" alt="Generic placeholder image"></a>
            }
            else
            {
                <a class="text-decoration-none text-reset" asp-controller="Profile" asp-action="Index" asp-route-login="@Model._OGThread.author.login"><img class="mr-3 flex-shrink-0 rounded-circle wall-of-fame-img border" src="../content/default/pfp_default.svg" alt="Generic placeholder image"></a>
            }
        </div>
        <div class="col d-flex align-items-center justify-content-start p-0 ps-2 pt-2">
            <a class="text-decoration-none text-reset" asp-controller="Profile" asp-action="Index" asp-route-login="@Model._OGThread.author.login">
                <h6>
                    @Model._OGThread.author.nickname
                    @if (Model._OGThread.author.role == 1)
                    {
                        <span class="badge rounded-pill text-bg-warning">MOD</span>
                    }
                    <small class="text-muted">#@Model._OGThread.author.login</small>
                </h6>
            </a>
        </div>
        <div class="col d-flex align-items-center justify-content-end p-0 ps-2 pt-2">
            @if (Model._OGThread.id_author == Context.Session.GetInt32("UserId"))
            {
                <button type="button" class="btn btn-mico btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">Edit</button>
                <button type="button" class="btn btn-danger btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">Delete</button>
            }
            <small>@Model._OGThread.creation_date.UtcDateTime</small>
        </div>
    </div>
    <div class="row">
        <div class="col-auto d-flex p-0">
            <div class="vr vr-size-and-position"></div>
        </div>
        <div class="col d-flex flex-column">
            <p class="align-items-start border rounded p-1 m-1 bg-secondary bg-opacity-10">
                @Model._OGThread.description
            </p>
            @if (Model._OGThread.thread_images != null && Model._OGThread.thread_images.Any())
            {
                <div class="row d-grid justify-content-center align-items-center mb-2">
                    <div class="text-center">
                        @foreach (var image in Model._OGThread.thread_images)
                        {
                            <img class="flex-shrink-0 mt-2 w-50 h-auto" src="@image.image" alt="Thread Image">
                        }
                    </div>
                </div>
            }
            <div class="row d-flex">
                <div class="col-auto text-warning">
                    <i class="bi bi-star-fill"></i> : 123
                </div>
                <div class="col-10">
                    <div class="btn-group btn-group-sm threads-list-btn" role="group" aria-label="Basic example">
                        @if (Model._OGThread.id_author != Context.Session.GetInt32("UserId") && Context.Session.TryGetValue("UserId", out _))
                        {
                            <button type="button" class="btn btn-outline-success"><i class="bi bi-hand-thumbs-up"></i></button>
                            <button type="button" class="btn btn-outline-danger"><i class="bi bi-hand-thumbs-down"></i></button>
                        }
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalReply"><i class="bi bi-chat-left-dots"></i></button>
                    </div>
                </div>
            </div>

            <!-- Reply to main thread -->
            <div class="row align-item-center justify-content-start mt-2">
                <div class="col-auto p-0">
                    <img class="flex-shrink-0 rounded-circle avatar" src="https://via.placeholder.com/50" alt="Generic placeholder image">
                </div>
                <div class="col d-flex align-items-center justify-content-start p-0 ps-2 pt-2">
                    <h6>Nickname <span class="badge rounded-pill text-bg-warning">MOD</span> <small class="text-muted">#Login</small></h6>
                </div>
                <div class="col d-flex align-items-center justify-content-end p-0 ps-2 pt-2">
                    <button type="button" class="btn btn-mico btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">Edit</button>
                    <button type="button" class="btn btn-danger btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">Delete</button>
                    <small>Date</small>
                </div>
            </div>
            <div class="row">
                <div class="col-auto d-flex p-0">
                    <div class="vr vr-size-and-position"></div>
                </div>
                <div class="col d-flex flex-column">
                    <p class="align-items-start border rounded p-1 m-1 bg-secondary bg-opacity-10">
                        Cosik chyba działa.
                    </p>
                    <div class="row d-flex">
                        <div class="col-auto text-warning">
                            <i class="bi bi-star-fill"></i> : 123
                        </div>
                        <div class="col-10">
                            <div class="btn-group btn-group-sm threads-list-btn" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-outline-success"><i class="bi bi-hand-thumbs-up"></i></button>
                                <button type="button" class="btn btn-outline-danger"><i class="bi bi-hand-thumbs-down"></i></button>
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalReply"><i class="bi bi-chat-left-dots"></i></button>
                            </div>
                        </div>
                    </div>

                    <!-- Reply to reply/subthread -->
                    <div class="row align-item-center justify-content-start mt-2">
                        <div class="col-auto p-0">
                            <img class="flex-shrink-0 rounded-circle avatar" src="https://via.placeholder.com/50" alt="Generic placeholder image">
                        </div>
                        <div class="col d-flex align-items-center justify-content-start p-0 ps-2 pt-2">
                            <h6>Nickname <span class="badge rounded-pill text-bg-warning">MOD</span> <small class="text-muted">#Login</small></h6>
                        </div>
                        <div class="col d-flex align-items-center justify-content-end p-0 ps-2 pt-2">
                            <button type="button" class="btn btn-mico btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">Delete</button>
                            <small>Date</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-auto d-flex p-0">
                            <div class="vr vr-size-and-position"></div>
                        </div>
                        <div class="col d-flex flex-column">
                            <p class="align-items-start border rounded p-1 m-1 bg-secondary bg-opacity-10">
                                Nom. Pa jaki fajny piesek:
                            </p>
                            <div class="row d-grid justify-content-center align-items-center mb-2">
                                <img class="flex-shrink-0 mt-2" src="https://via.placeholder.com/250x450" alt="Generic placeholder image">
                            </div>
                            <div class="row d-flex">
                                <div class="col-auto text-warning">
                                    <i class="bi bi-star-fill"></i> : 123
                                </div>
                                <div class="col-10">
                                    <div class="btn-group btn-group-sm threads-list-btn" role="group" aria-label="Basic example">
                                        <button type="button" class="btn btn-outline-success"><i class="bi bi-hand-thumbs-up"></i></button>
                                        <button type="button" class="btn btn-outline-danger"><i class="bi bi-hand-thumbs-down"></i></button>
                                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalReply"><i class="bi bi-chat-left-dots"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Reply to main thread -->
            <div class="row align-item-center justify-content-start mt-2">
                <div class="col-auto p-0">
                    <img class="flex-shrink-0 rounded-circle avatar" src="https://via.placeholder.com/50" alt="Generic placeholder image">
                </div>
                <div class="col d-flex align-items-center justify-content-start p-0 ps-2 pt-2">
                    <h6>Nickname <span class="badge rounded-pill text-bg-warning">MOD</span> <small class="text-muted">#Login</small></h6>
                </div>
                <div class="col d-flex align-items-center justify-content-end p-0 ps-2 pt-2">
                    <button type="button" class="btn btn-mico btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">Edit</button>
                    <button type="button" class="btn btn-danger btn-sm me-2" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">Delete</button>
                    <small>Date</small>
                </div>
            </div>
            <div class="row">
                <div class="col-auto d-flex p-0">
                    <div class="vr vr-size-and-position"></div>
                </div>
                <div class="col d-flex flex-column">
                    <p class="align-items-start border rounded p-1 m-1 bg-secondary bg-opacity-10">
                        Hmmm. Ciekawe.
                    </p>
                    <div class="row d-flex mt-2">
                        <div class="col-auto text-warning">
                            <i class="bi bi-star-fill"></i> : 123
                        </div>
                        <div class="col-10">
                            <div class="btn-group btn-group-sm threads-list-btn" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-outline-success"><i class="bi bi-hand-thumbs-up"></i></button>
                                <button type="button" class="btn btn-outline-danger"><i class="bi bi-hand-thumbs-down"></i></button>
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalReply"><i class="bi bi-chat-left-dots"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>