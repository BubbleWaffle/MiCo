<div class="container">

    <!-- Edit -->
    <div class="modal fade" id="exampleModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit thread/reply</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="colmx-auto" asp-controller="Thread" asp-action="Edit" method="post">
                        <label for="exampleFormControlTextarea1" class="form-label">Text:</label>
                        <textarea class="form-control" id="reason" rows="3" maxlength="800" placeholder="Enter reason..."></textarea>
                        <small id="loginHelp" class="form-text text-danger">Max 800 characters!</small>
                        <div class="mt-3">
                            <input class="form-control" type="file" id="formFileMultiple" multiple>
                            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-mico btn-sm mt-2">Edit</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reply -->
