@model MiCo.Models.ViewModels.ThreadDeleteViewModel
@{
    ViewData["Title"] = "Delete thread - ";
}
<div class="container">
    <div class="row">
        <!-- Delete -->
        <form class="col-sm-4 mx-auto" asp-controller="Thread" asp-action="Delete" method="post">
            <h5 class="text-danger text-center mb-3">Are you sure you want to delete this thread?</h5>
            <div class="form-group mb-2">
                <label for="exampleInputPassword1"><i class="bi bi-pass-fill"></i> Password:</label>
                <input type="password" class="form-control mt-1" placeholder="Enter password" required asp-for="password">
                <small id="loginHelp" class="form-text text-danger">If you want to delete account you have to enter password!</small>
            </div>
            <div class="d-flex justify-content-center">
                <a class="btn btn-mico btn-sm mt-2 me-1" asp-controller="Thread" asp-action="Index" asp-route-id="@Model.thread_id">Back to main thread</a>
                <button type="submit" class="btn btn-danger btn-sm mt-2 ms-1">Delete</button>
            </div>
        </form>
        <div class="d-flex justify-content-center mt-3 mb-3">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
</div>