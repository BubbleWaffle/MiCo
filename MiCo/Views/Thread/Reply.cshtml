@model MiCo.Models.ViewModels.ThreadReplyViewModel
@{
    ViewData["Title"] = "Reply - ";
}
<div class="container">
    <form class="col-sm-4 mx-auto" asp-controller="Thread" asp-action="Reply" method="post" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label for="exampleFormControlTextarea1" class="form-label"><i class="bi bi-card-text"></i> Content:</label>
            <textarea class="form-control" id="reason" rows="3" placeholder="Enter text..." asp-for="reply_description" required></textarea>
            <small id="descriptionHelp" class="form-text text-danger">Max 500 characters!</small>
        </div>
        <div class="mt-3">
            <input class="form-control" type="file" id="formFileMultiple" name="reply_files" accept=".png, .jpg, .jpeg, .gif" multiple>
            <small id="loginHelp" class="form-text text-danger">You can send max 3 images!</small>
        </div>
        <div class="d-flex justify-content-center mt-1">
            <button type="submit" class="btn btn-mico btn-sm">Reply</button>
        </div>
    </form>
    <div class="d-flex justify-content-center mt-3 mb-3">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>